<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/layout_itemalarms"
    android:background="#122129"
    android:paddingBottom="0dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9:30"
        android:id="@+id/text_itemalarms_time"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text_itemalarms_method"
        android:layout_alignStart="@+id/text_itemalarms_method" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Method of snooze"
        android:id="@+id/text_itemalarms_method"
        android:textColor="#ffffff"
        android:layout_below="@+id/text_itemalarms_time"
        android:layout_toRightOf="@+id/itemalarms_white_arrow" />

    <Switch
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:id="@+id/switch_itemalarms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        android:button="@null"
        android:thumb="@drawable/transparent"
        android:background="@drawable/blueish_kind_of_green_switch_on"
        android:padding="0dp"
        android:track="@drawable/transparent"
        android:layout_alignBottom="@+id/text_itemalarms_method" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemalarms_white_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/white_arrow"
        android:background="#00000000"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:clickable="true" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:id="@+id/delimiter_alarm"
        android:src="@drawable/blue_delimiter"
        android:scaleType="fitXY"
        android:layout_below="@id/text_itemalarms_method"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>